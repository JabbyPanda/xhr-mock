{
  "name": "xhr-mock-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples",
      "tests",
      "website"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {
    "@jameslnewell/tslint-config": "0.1.0",
    "@types/jest": "^24.0.6",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "clean": "yarn workspaces exec lib",
    "lint:sources": "tslint --format stylish --config .configs/tslint.sources.json --project .configs/tsconfig.sources.json",
    "lint:tests": "tslint --format stylish --config .configs/tslint.tests.json --project .configs/tsconfig.tests.json",
    "lint": "yarn run lint:sources && yarn run lint:tests",
    "build": "yarn workspaces run build",
    "test": "jest --config=.configs/jest.config.js",
    "publish": "yarn run publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
