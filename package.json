{
  "name": "xhr-mock-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "tests/*",
      "website"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.6.1",
    "@jameslnewell/jest-preset-lint": "^1.2.0",
    "@jameslnewell/jest-preset-test": "^3.1.0",
    "@jameslnewell/jest-preset-type": "^1.2.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^24.0.15",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "clean": "yarn workspaces exec lib",
    "lint": "eslint --config .eslintrc.js --ext .ts,.tsx --ignore-pattern node_modules --fix . ",
    "build": "yarn workspaces run build",
    "test": "jest --config .jestrc.js",
    "publish": "yarn run publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
