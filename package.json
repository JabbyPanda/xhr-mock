{
  "name": "xhr-mock-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "tests/*",
      "website",
      "examples"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.7.0",
    "@jameslnewell/babel-preset": "^2.0.0",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.13.5",
    "@jameslnewell/jest-preset-test": "^5.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^24.0.22",
    "eslint": "^6.6.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "tsdx": "^0.11.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "clean": "lerna exec -- rm -rf dist",
    "type": "tsc --noEmit",
    "lint": "eslint --config .eslintrc.js --ext .ts,.tsx --ignore-pattern node_modules --fix . ",
    "build": "yarn workspaces run build",
    "test": "jest",
    "publish": "yarn run publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
