{
  "name": "xhr-mock-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "xhr-mock",
      "examples",
      "tests",
      "website"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "publish": "yarn run publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
